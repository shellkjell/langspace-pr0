{
  "name": "langspace",
  "displayName": "LangSpace",
  "description": "Syntax highlighting and language support for LangSpace (.ls files)",
  "version": "0.1.0",
  "publisher": "shellkjell",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:langspace"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shellkjell/langspace"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "langspace",
    "ai",
    "agents",
    "llm",
    "workflow"
  ],
  "contributes": {
    "languages": [
      {
        "id": "langspace",
        "aliases": [
          "LangSpace",
          "langspace"
        ],
        "extensions": [
          ".ls"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/langspace-light.png",
          "dark": "./icons/langspace-dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "langspace",
        "scopeName": "source.langspace",
        "path": "./syntaxes/langspace.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.75.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}